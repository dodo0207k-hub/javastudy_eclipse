import java.util.Arrays;

public class HowToDefineArray {

	public static void main(String[] args) {
		// 배열은 연관된 데이터를 모아서 관리하기 위해서 사용하는 데이터 타입이다.
		// 변수가 하나의 데이터를 저장하기 위한 것이라면 배열은 여러 개의 데이터를 저장하기 위한 것이라고 할 수 있다.
		
		// 배열을 생성하는 방법
		// 1. 배열의 타입[] 배열명 = {데이터, 데이터, 데이터 ,...};
		// 2. 배열의 타입[] 배열명;
		// 3. 배열타입 배열명[];
		// 2, 3번은 배열 선언만 해두고 초기화는 하지 않은 단계.
		
		// 문자열타입 배열의 정의
		String[] name = {"김도훈", "최영재", "정동찬", "박진우", "장현수"};// {} 사이에 문자열데이터를 넣으려면 "" 사이에 입력하여야한다.
		System.out.println(name.length);// 배열의 길이를 출력하는 명령어
		int[] number; // int형 배열의 선언
		number = new int[10]; // 선언한 배열 초기화
		int[] same = new int[5];
		Arrays.fill(same, 1); // 배열의 모든 index값을 1로 초기화 하는 명령어 Arrays.fill(배열명, 인덱스);
		int[] plus = new int[20];
		for(int i = 0; i < plus.length; i++) {// 배열의 index값을 for문을 사용하여 초기화
			plus[i] = i;// i번째 index값을 i로 초기화
		}
	}

}
